/**
 * Generate the HTML for the references page.
 *
 * @return string
 */
function imrs_abbr_ref_list() {
  $references = imrs_abbr_references();
  $html = '';
  $i = 1;
  foreach ($references as $reference) {
    $html .= "<p id='ref{$i}'>[$i] $reference</p>";
    $i++;
  }
  return $html;
}
